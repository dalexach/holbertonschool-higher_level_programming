#!/usr/bin/python3
Square = __import__('4-square').Square

my_square = Square(89)
print("Area: {} for size: {}".format(my_square.area(), my_square.size))

my_square.size = 3
print("Area: {} for size: {}".format(my_square.area(), my_square.size))

try:
    my_square.size = "5 feet"
    print("Area: {} for size: {}".format(my_square.area(), my_square.size))
except Exception as e:
    print(e)

x = Square()
#x.size = -1

#x.size = "a"

x = Square(3)
print(x.size)

x.size = 0
print(x.size)

x.size = 5
print(x.size)

y = Square(3)
print(y.area())

y.size = 0
print(y.area())
y.size = "a"

y.size = 5
print(y.area())
